@page "/Registration"

<h3>Registration</h3>

<div>
    <div class="form-group">
        <label>First Name</label>
        <input class="form-control" placeholder="Enter your first name" />
    </div>

    <div class="mt-2 form-group">
        <label>Last Name</label>
        <input class="form-control" placeholder="Enter your last name" />
    </div>

    <div class="form-group">
        <label> Email Address</label>
        <input type="email" class="form-control" placeholder="Enter your email" />
    </div>
    <div class="mt-2 form-group">
        <label>Password</label>
        <input type="password" class="form-control" placeholder="Create a password" />
    </div>

    <div class="mt-2 form-group">
        <label>Retype the password</label>
        <input type="password" class="form-control" placeholder="Confirm the password" />
    </div>

    <div class=" text-center mt-2">
        <button class=" btn btn-primary" type="submit">Register</button>
    </div>
</div>

